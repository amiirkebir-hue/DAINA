import tkinter as tk
import requests
import os

def set_window_icon_from_url(url):
    """Set window icon from an internet URL"""
    try:
        response = requests.get(url)
        icon_path = "temp_icon.ico"
        with open(icon_path, "wb") as f:
            f.write(response.content)
        root.iconbitmap(icon_path)
        os.remove(icon_path)  # optional: remove temp file
    except Exception as e:
        print("Error setting icon:", e)

root = tk.Tk()
root.title("Download Manager")

# ğŸ¨ Ù„ÛŒÙ†Ú© Ø¢ÛŒÚ©ÙˆÙ† (Ù‡Ù…Ø§Ù† Ù„ÛŒÙ†Ú© Ù‚Ø¨Ù„ÛŒ)
icon_url = "https://raw.githubusercontent.com/amiirkebir-hue/DAINA/refs/heads/main/channels4_profile_imresizer.ico"
set_window_icon_from_url(icon_url)

# ÙÙ‚Ø· Ù¾ÛŒØ§Ù… "Program is under maintenance"
tk.Label(root, text="Program is under maintenance", font=("Arial", 16), fg="red").pack(padx=20, pady=50)

root.mainloop()
